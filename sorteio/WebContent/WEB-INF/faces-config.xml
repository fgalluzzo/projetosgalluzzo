<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	 <application>       
        <message-bundle>message</message-bundle>
    </application>
	
	<lifecycle>
		<phase-listener>filtro.LoginFilter</phase-listener>
	</lifecycle>

	<validator>
		<validator-id>validaEmail</validator-id>
		<validator-class>validadores.EmailValidator</validator-class>
	</validator>
	<validator>
		<validator-id>validaNome</validator-id>
		<validator-class>validadores.NomeValidator</validator-class>
	</validator>
	<validator>
		<validator-id>validaSobrenome</validator-id>
		<validator-class>validadores.SobrenomeValidator</validator-class>
	</validator>
	<validator>
		<validator-id>validaDataFim</validator-id>
		<validator-class>validadores.DataValidator</validator-class>
	</validator>
	<validator>
		<validator-id>validaHora</validator-id>
		<validator-class>validadores.HoraValidator</validator-class>
	</validator>
</faces-config>
